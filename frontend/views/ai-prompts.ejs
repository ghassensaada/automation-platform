<% layout('layout') -%>

<h1 class="text-2xl font-bold mb-4">AI Prompt Generator</h1>

<form action="/ai-prompts" method="POST" class="bg-white p-6 rounded shadow space-y-4 mb-6">
  <div>
    <label class="block font-semibold">Enter Prompt</label>
    <input name="prompt" class="w-full border rounded p-2" required />
  </div>
  <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600">Generate</button>
</form>

<% if (generatedText) { %>
  <div class="bg-white p-6 rounded shadow">
    <h2 class="text-lg font-semibold mb-2">Generated Output</h2>
    <p><%= generatedText %></p>
  </div>
<% } %>
